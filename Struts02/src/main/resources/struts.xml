<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <!--<constant name="struts.action.extension" value="do,action,"/>-->
    <!--<constant name="struts.configuration.xml.reload" value="true"/>-->
    <!--change file upload size-->

    <constant name="struts.multipart.maxSize" value="102400000"/>

    <package name="default" extends="struts-default">

        <interceptors>
            <interceptor name="systemInterceptor" class="com.yinom.pdd.struts.interceptor.SystemInterceptor"/>
            <interceptor name="loginInterceptor" class="com.yinom.pdd.struts.interceptor.LoginInterceptor"/>
            <interceptor-stack name="systemStack">
                <interceptor-ref name="systemInterceptor"/>
                <interceptor-ref name="loginInterceptor"/>
                <interceptor-ref name="defaultStack"/>
            </interceptor-stack>
        </interceptors>
        <global-results>
            <result name="loginInput">/WEB-INF/Login/login.jsp</result>
            <result name="error">/WEB-INF/Error/error.jsp</result>
        </global-results>
        <action name="emp" class="com.yinom.pdd.struts.action.EmployeeAction" method="execute">
            <result name="success">index.jsp</result>
        </action>
        <action name="empInput" class="com.yinom.pdd.struts.action.EmployeeAction" method="empInput">
            <result name="success">/WEB-INF/Employee/empInput.jsp</result>
        </action>
        <action name="empList" class="com.yinom.pdd.struts.action.EmployeeAction" method="empList">
            <result name="success">/WEB-INF/Employee/empList.jsp</result>
        </action>
        <action name="Employee_test" class="com.yinom.pdd.struts.action.EmployeeAction" method="test">
            <result name="test">/WEB-INF/Employee/test.jsp</result>
        </action>
        <action name="Employee_show" class="com.yinom.pdd.struts.action.EmployeeAction" method="show">
            <result name="show">/WEB-INF/Employee/show.jsp</result>
        </action>
        <action name="Department_add" class="com.yinom.pdd.struts.action.DepartmentAction" method="add">
            <result name="add">/WEB-INF/Department/add.jsp</result>
        </action>
        <action name="Department_doAdd" class="com.yinom.pdd.struts.action.DepartmentAction" method="doAdd">
            <result name="doAdd">/WEB-INF/Department/doAdd.jsp</result>
        </action>
        <action name="Department_update" class="com.yinom.pdd.struts.action.DepartmentAction" method="update">
            <result name="update">/WEB-INF/Department/update.jsp</result>
        </action>
        <action name="Department_upload" class="com.yinom.pdd.struts.action.DepartmentAction" method="upload">
            <result name="upload">/WEB-INF/Department/upload.jsp</result>
        </action>
        <action name="Department_doUpload" class="com.yinom.pdd.struts.action.DepartmentAction" method="doUpload">
            <result name="doUpload">/WEB-INF/Department/doUpload.jsp</result>
        </action>
        <action name="Login_login" class="com.yinom.pdd.struts.action.LoginAction" method="login">
            <result name="login">/WEB-INF/Login/login.jsp</result>
        </action>
        <action name="Login_doLogin" class="com.yinom.pdd.struts.action.LoginAction" method="doLogin">
            <interceptor-ref name="systemStack"/>
            <result name="doLogin">/WEB-INF/Login/doLogin.jsp</result>
        </action>
        <action name="admin_Show" class="com.yinom.pdd.struts.action.LoginAction" method="adminShow">
            <interceptor-ref name="systemStack"/>
            <!--<result name="success">/WEB-INF/Login/adminShow.jsp</result>-->
            <result type="redirect">user_Show</result>
        </action>
        <action name="user_Show" class="com.yinom.pdd.struts.action.LoginAction" method="userShow">
            <interceptor-ref name="systemStack"/>
            <result name="success">/WEB-INF/Login/userShow.jsp</result>
        </action>
        <action name="Login_logout" class="com.yinom.pdd.struts.action.LoginAction" method="logout">
            <result name="loginInput">/WEB-INF/Login/login.jsp</result>
        </action>
        <action name="*_*" class="com.yinom.pdd.struts.action.{1}Action" method="{2}">
            <!--<interceptor-ref name="systemInterceptor"/>
            <interceptor-ref name="defaultStack"/>-->
            <interceptor-ref name="systemStack"/>
            <result name="{2}">/WEB-INF/{1}/{2}.jsp</result>
        </action>
    </package>
</struts>
